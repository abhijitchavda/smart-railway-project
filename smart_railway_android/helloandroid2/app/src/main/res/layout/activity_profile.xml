<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/background"
        android:id="@+id/relativeLayout">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="12dp"
            android:id="@+id/name"
            android:gravity="center"
            android:text="name"
            android:textColor="#ffffff"
            android:layout_alignStart="@+id/imageView2"
            android:layout_alignEnd="@+id/imageView2" />

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/profile_icon"
            android:id="@+id/imageView2"
            android:layout_above="@+id/name"
            android:layout_centerHorizontal="true" />

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            app:theme="@style/ThemeOverlay.AppCompat.Dark"
            android:minHeight="?attr/actionBarSize"
            android:id="@+id/toolbar13"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <Switch
            android:text="Notification  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/switch1"
            android:textColor="#ffffff"
            android:layout_below="@+id/toolbar13"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/relativeLayout"
        android:background="#d8bfd8">


        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/contactno"
            android:text="contactno"
            android:gravity="center"

            android:layout_marginBottom="36dp"
            android:layout_above="@+id/city"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/change_password"
            android:text="change password"
            android:gravity="center"
            android:background="#916AF9"
            android:textColor="#FFFFFF"
            android:onClick="changepassword"
            android:layout_marginBottom="61dp"
            android:layout_alignParentBottom="true"
            android:layout_alignStart="@+id/city"
            android:layout_alignEnd="@+id/city" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:id="@+id/city"
            android:text="city"
            android:gravity="center"
            android:layout_centerVertical="true"
            android:layout_alignStart="@+id/contactno" />

    </RelativeLayout>

</RelativeLayout>
