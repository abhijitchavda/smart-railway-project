<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar19" />

    <Button
        android:text=" RESCHEDULED TRAINS "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:background="#BB0FB3"
        android:onClick="reschedule"
        android:textColor="#FFFFFF"
        android:id="@+id/button5"
        android:layout_below="@+id/button4"
        android:layout_centerHorizontal="true" />

    <Button
        android:text=" cancelled trains "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="cancelled"
        android:layout_marginTop="72dp"
        android:id="@+id/button4"
        android:background="#916AF9"
        android:layout_below="@+id/toolbar19"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
