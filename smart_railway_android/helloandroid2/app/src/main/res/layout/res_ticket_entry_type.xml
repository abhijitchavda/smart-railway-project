<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <Button
        android:text="using pnr number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="pnrnotype"
        android:id="@+id/pnrnotype"
        android:background="#BB0FB3"
        android:textColor="#FFFFFF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="manual entry"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/manualtype"
        android:onClick="manualtype"
        android:background="#916AF9"
        android:layout_marginBottom="41dp"
        android:layout_above="@+id/pnrnotype"
        android:layout_centerHorizontal="true" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar9" />

</RelativeLayout>
