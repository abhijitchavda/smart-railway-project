<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <Button
        android:text="search train"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="searchtr"
        android:id="@+id/searchtrid"
        android:textColor="#FFFFFF"
        android:background="#BB0FB3"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/textView13"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="32dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:id="@+id/dateid"
        android:textColor="#FFFFFF"
        android:hint="dd-mm"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView13"
        android:layout_marginTop="121dp" />

    <TextView
        android:text="enter date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView13"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/dateid"
        android:layout_alignBottom="@+id/dateid"
        android:layout_alignEnd="@+id/textView15" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enter source station"
        android:id="@+id/sourcespinner"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/dateid"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="63dp"
        android:layout_toEndOf="@+id/textView13"
        android:layout_alignStart="@+id/destinationspinner" />

    <TextView
        android:text="source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView14"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/sourcespinner"
        android:layout_alignBottom="@+id/sourcespinner"
        android:layout_alignStart="@+id/searchtrid" />

    <AutoCompleteTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/destinationspinner"
        android:hint="enter destination station"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/textView14"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="45dp"
        android:layout_alignStart="@+id/dateid" />

    <TextView
        android:text="destination"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView15"
        android:textColor="#FFFFFF"
        android:layout_alignBaseline="@+id/destinationspinner"
        android:layout_alignBottom="@+id/destinationspinner"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar11" />
</RelativeLayout>
