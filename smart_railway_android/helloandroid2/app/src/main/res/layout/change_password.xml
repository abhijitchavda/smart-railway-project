<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="save"
        android:id="@+id/changepassbid"
        android:onClick="change"
        android:background="#916AF9"
        android:layout_marginTop="53dp"
        android:layout_below="@+id/changeconfid"
        android:layout_alignEnd="@+id/textView10" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="confirm password"
        android:textColor="#FFFFFF"
        android:id="@+id/textView12"
        android:layout_alignBaseline="@+id/changeconfid"
        android:layout_alignBottom="@+id/changeconfid"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize"
        android:id="@+id/toolbar4"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="current password"
        android:textColor="#FFFFFF"
        android:id="@+id/textView10"
        android:layout_marginTop="57dp"
        android:layout_below="@+id/toolbar4"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/changeoldid"
        android:layout_alignBaseline="@+id/textView10"
        android:layout_alignBottom="@+id/textView10"
        android:layout_alignEnd="@+id/changenewid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new password"
        android:textColor="#FFFFFF"
        android:id="@+id/textView11"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/changeoldid"
        android:layout_alignStart="@+id/changepassbid" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/changeconfid"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@+id/textView12"
        android:layout_marginStart="23dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/changenewid"
        android:layout_alignBaseline="@+id/textView11"
        android:layout_alignBottom="@+id/textView11"
        android:layout_alignStart="@+id/changeconfid" />
</RelativeLayout>
