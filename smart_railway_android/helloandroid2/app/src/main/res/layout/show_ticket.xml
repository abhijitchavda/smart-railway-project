<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">


    <TextView
        android:text="TextView"
        android:textColor="#C4C3D0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/textView27"
        android:layout_centerHorizontal="true"
        android:id="@+id/trainnumid" />

    <TextView
        android:text="Date of Journey :"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView27"
        android:layout_alignEnd="@+id/textView27"
        android:layout_marginTop="28dp"
        android:id="@+id/textView29" />

    <TextView
        android:text="Source : "
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView29"
        android:layout_alignEnd="@+id/textView29"
        android:layout_marginTop="38dp"
        android:id="@+id/textView31" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C4C3D0"
        android:layout_alignTop="@+id/textView31"
        android:id="@+id/srcname"
        android:layout_alignStart="@+id/desname" />

    <TextView
        android:text="Destination :"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView31"
        android:layout_alignEnd="@+id/textView31"
        android:layout_marginTop="35dp"
        android:id="@+id/textView34" />

    <TextView
        android:text="compartment :"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView34"
        android:layout_alignEnd="@+id/textView34"
        android:layout_marginTop="45dp"
        android:id="@+id/textView36" />

    <Button
        android:text="Delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#BB0FB3"
        android:textColor="#FFFFFF"
        android:onClick="delete"
        android:layout_below="@+id/compartmentname"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="76dp"
        android:id="@+id/button3" />

    <TextView
        android:text="train number :"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="135dp"
        android:id="@+id/textView27"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark"
        android:minHeight="?attr/actionBarSize"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/toolbar12" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/type_ticket"
        android:textColor="#C4C3D0"
        android:layout_alignBaseline="@+id/textView28"
        android:layout_alignBottom="@+id/textView28"
        android:layout_alignStart="@+id/trainnumid" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C4C3D0"
        android:id="@+id/compartmentname"
        android:layout_alignBaseline="@+id/textView36"
        android:layout_alignBottom="@+id/textView36"
        android:layout_alignStart="@+id/type_ticket" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C4C3D0"
        android:id="@+id/desname"
        android:layout_alignBaseline="@+id/textView34"
        android:layout_alignBottom="@+id/textView34"
        android:layout_alignStart="@+id/compartmentname" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#C4C3D0"
        android:id="@+id/doj"
        android:layout_alignBaseline="@+id/textView29"
        android:layout_alignBottom="@+id/textView29"
        android:layout_alignStart="@+id/trainnumid" />

    <TextView
        android:text="Type:"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/textView28"
        android:layout_below="@+id/textView36"
        android:layout_alignEnd="@+id/textView36" />

</RelativeLayout>
